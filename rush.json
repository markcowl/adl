/**
 * This is the main configuration file for Rush.
 * For full documentation, please see https://rushjs.io
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.23.2",
  "pnpmVersion": "2.15.1",
  /**
   * Options that are only used when the PNPM package manager is selected
   */
  "pnpmOptions": {},
  "nodeSupportedVersionRange": ">=10.13.0 <15.0.0",
  "suppressNodeLtsWarning": true,
  "projectFolderMinDepth": 1,
  "projectFolderMaxDepth": 5,
  "gitPolicy": {},
  "repository": {
    "url": "https://github.com/azure/adl"
  },
  /**
   * Event hooks are customized script actions that Rush executes when specific events occur
   */
  "eventHooks": {
    /**
     * The list of shell commands to run before the Rush installation starts
     */
    "preRushInstall": [
      // "common/scripts/pre-rush-install.js"
    ],
    /**
     * The list of shell commands to run after the Rush installation finishes
     */
    "postRushInstall": [],
    /**
     * The list of shell commands to run before the Rush build command starts
     */
    "preRushBuild": [],
    /**
     * The list of shell commands to run after the Rush build command finishes
     */
    "postRushBuild": []
  },
  "variants": [],
  "telemetryEnabled": false,
  "projects": [
    {
      "packageName": "@azure-tools/adl.core",
      "projectFolder": "adl/core",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@azure-tools/adl",
      "projectFolder": "adl/cli",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@azure-tools/sourcemap",
      "projectFolder": "adl/sourcemap",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@azure-tools/openapi",
      "projectFolder": "adl/openapi",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@azure-tools/linq",
      "projectFolder": "adl/linq",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "adl-language",
      "projectFolder": "adl/extension",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    /** PLUGINS **/
    {
      "packageName": "@adl-plugins/arm",
      "projectFolder": "adl/plugins/arm",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@adl-plugins/core",
      "projectFolder": "adl/plugins/core",
      "reviewCategory": "production",
      "shouldPublish": true
    },
    {
      "packageName": "@adl-plugins/sample",
      "projectFolder": "adl/plugins/sample",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "rules-plugin",
      "projectFolder": "adl/rules-plugin",
      "reviewCategory": "production",
      "shouldPublish": false
    }
  ]
}